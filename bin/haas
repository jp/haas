#!/usr/bin/env ruby
require 'rubygems'
require 'haas'
require 'mixlib/cli'

class HaasCLI
  include Mixlib::CLI

  option :launch,
    :short => "-l",
    :long  => "--launch",
    :description => "Launch and install a cluster"

  option :nb_instances,
    :short => "-n COUNT",
    :long  => "--nb-instances COUNT",
    :description => "The number of instances you want to launch",
    :default => "5"

  option :instance_type,
    :long  => "--instance-type TYPE",
    :description => "The type of the EC2 instance you want to launch",
    :default => "m3.medium"

  option :aws_region,
    :short => "-r REGION",
    :long  => "--aws-region REGION",
    :description => "The AWS region used",
    :default => "us-east-1"

  option :list,
    :short => "-s",
    :long  => "--show",
    :description => "Show all the running instances"

  option :terminate,
    :short => "-t",
    :long  => "--terminate",
    :description => "Terminate the cluster"

  option :help,
    :short => "-h",
    :long => "--help",
    :description => "Show this message",
    :on => :tail,
    :boolean => true,
    :show_options => true,
    :exit => 0

end

cli = HaasCLI.new
cli.parse_options

Haas::Config.set_options cli.config

if cli.config[:launch]
  Haas.launch
elsif cli.config[:list]
  Haas.show
elsif cli.config[:terminate]
  Haas.terminate Haas::Cluster.last
end
