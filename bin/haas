#!/usr/bin/env ruby
require 'rubygems'
require 'haas'
require 'mixlib/cli'

class MyCLI
  include Mixlib::CLI

  option :launch,
    :short => "-l",
    :long  => "--launch",
    :description => "Launch the cluster"

  option :list,
    :short => "-s",
    :long  => "--show",
    :description => "Show all the running instances"

  option :terminate,
    :short => "-t",
    :long  => "--terminate",
    :description => "Terminate the cluster"

  option :help,
    :short => "-h",
    :long => "--help",
    :description => "Show this message",
    :on => :tail,
    :boolean => true,
    :show_options => true,
    :exit => 0

end

cli = MyCLI.new
cli.parse_options

if cli.config[:launch]
  ClusterController.launch
elsif cli.config[:list]
  ClusterController.show
elsif cli.config[:terminate]
  ClusterController.terminate
end
